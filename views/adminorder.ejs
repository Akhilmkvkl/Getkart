        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/stylesheets/selection.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-light d-none d-lg-block" id="templatemo_nav_top">
        <div class="container text-light">
            <div class="w-100 d-flex justify-content-between">
                <div>
                    <i class="fa fa-envelope mx-2"></i>
                    <a class="navbar-sm-brand text-light text-decoration-none"
                        href="mailto:info@company.com">getkart@company.com</a>
                    <i class="fa fa-phone mx-2"></i>
                    <a class="navbar-sm-brand text-light text-decoration-none" href="tel:010-020-0340">010-020-0340</a>
                </div>
                <div>
                    <a class="text-light" href="https://fb.com/templatemo" target="_blank" rel="sponsored"><i
                            class="fab fa-facebook-f fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://www.instagram.com/" target="_blank"><i
                            class="fab fa-instagram fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://twitter.com/" target="_blank"><i
                            class="fab fa-twitter fa-sm fa-fw me-2"></i></a>
                    <a class="text-light" href="https://www.linkedin.com/" target="_blank"><i
                            class="fab fa-linkedin fa-sm fa-fw"></i></a>
                </div>
            </div>
        </div>
    </nav>
    <!-- Close Top Nav -->


    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-light shadow">
        <div class="container d-flex justify-content-between align-items-center">

            <a class="navbar-brand text-success logo h1 align-self-center" href="index.html">
                GETkart
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between"
                id="templatemo_main_nav">
                <div class="flex-fill">
                    <ul class="nav navbar-nav d-flex justify-content-between mx-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/adminhome/products">products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/adminhome/add-product">Add product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/adminhome/orders">orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">sales</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar align-self-center d-flex">


                    <a class="nav-icon position-relative text-decoration-none" href="/userhome/cart">
                        <i class="fa fa-fw fa-cart-arrow-down text-dark mr-1"></i>
                        <span
                            class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"></span>
                    </a>
                    <a class="nav-icon position-relative text-decoration-none" href="/userhome/profile">
                        <i class="fa fa-fw fa-user text-dark mr-3"></i>
                        <span
                            class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"></span>
                    </a>
                </div>
            </div>

        </div>
    </nav>


    <div class="btn-group btn-group-toggle"  id="selection" data-toggle="buttons">
        <label class="btn btn-secondary ">
            <input type="radio" name="options" id="option1" autocomplete="off"><a href="/adminhome/orders"><button
                    class="button">New</button></a>
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="options" id="option2" autocomplete="off"><a href="/adminhome/confirmed"><button
                    class="button">confirmed</button></a>
        </label>
        <label class="btn btn-secondary">
            <input type="radio" name="options" id="option3" autocomplete="off"><a href="/adminhome/delivered"><button
                    class="button">delivered</button></a>
        </label>
    </div>

    <table class="table" id="myTable" style="width:80%;border: 2em,thin; margin-left: 100px;">
        <thead>
            <tr>        
                <th scope="col">id</th>
                <th scope="col">amount</th>
                <th scope="col">date</th>
                <th scope="col">payment</th>
                <th scope="col">Action</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0;i<docs.length;i++){ %>
                <tr>
                    <th scope="row">
                        <%= docs[i]._id %>
                    </th>
                    <td>â‚¹ <%= docs[i].amount %>
                    </td>
                    <td>
                        <%= docs[i].Date %>
                    </td>
                    <td>
                        <%= docs[i].payment %>
                    </td>
                    <% if(docs[i].status=="placed" ){ %>
                        <td><a href="/adminhome/confirm?id=<%= docs[i]._id  %> "><button type="button"
                                    class="btn btn-outline-success">Confirm</button></a></td>

                        <% } else if(docs[i].status=="confirmed" && docs[i].orderconfirmed ) { %>

                            <td><a href="/adminhome/deliver?id=<%= docs[i]._id  %> "><button type="button"
                                        class="btn btn-outline-success">delivered</button></a></td>
                            <% } %>
                                <td><a href="/adminhome/vieworder?id=<%= docs[i]._id  %> "><button type="button"
                                            class="btn btn-outline-success">View</button></a></td>

                </tr>
                <% } %>
        </tbody>
</body>

</html>